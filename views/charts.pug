html
    title THE HOT 100
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        script(src='https://www.youtube.com/iframe_api')
        script(type="text/javascript", src="/js/jquery-3.2.1.min.js")
        script(type="text/javascript", src="/js/bootstrap.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js")
  
        link(type="text/css", rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        link(rel="stylesheet", type="text/css", href="/css/bootstrap.min.css")
        link(rel="stylesheet", type="text/css", href="/css/charts.css")
        link(rel="shortcut icon", type="image/x-icon", href="/images/favicon.ico")
        link(rel="icon", type="image/x-icon", href="/images/favicon.ico")
    body
        nav#navi(class="navbar navbar-inverse" style="text-overflow:hidden")
            div#naviHeader(class="navbar-brand") THE HOT 100 /
            div#naviContent(class="navbar-brand" style="")
        div(class="container")        
            //- button(type="button", class="btn btn-info", data-toggle="collapse", data-target="#row1") collapsible
            div#row1(class="row")
                div#videoFrame(class="col-md-12")
            div#row2(class="row")
                div#list(class="col-md-12 list-group")
                    each song in charts
                        a(class="media list-group-item", href="#", onclick="onClickSongTitle(this)")
                            div(class="media-left")
                                h3#rank= (song.rank < 10) ? "00" + song.rank : (song.rank == 100 ? song.rank : "0" + song.rank)
                            div(class="media-body")
                                h4(class="media-heading")= song.title
                                span= song.artist
            
            div(class="fixed-action-btn horizontal")
                a(class="btn-floating btn-large blue-grey darken-4")
                    i(class="large material-icons") library_music
                ul
                    li(onclick="onClickPrevious()")
                        a(class="btn-floating blue-grey darken-5")
                            i(class="material-icons") skip_previous
                    li#playPauseButton(onclick="onClickPlayPauseButton(this)")
                        a(class="btn-floating blue-grey darken-5")
                            i(class="material-icons") pause
                    li(onclick="onClickNext()")
                        a(class="btn-floating blue-grey darken-5")
                            i(class="material-icons") skip_next
        

        script(type="text/javascript", src="/js/charts.js")